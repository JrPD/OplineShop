@model IEnumerable<OnlineShop.Models.ManageShopModels.Views.PropertyView>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Список властивостей з групи @ViewBag.LinkName</h2>
<p>
    @Html.ActionLink("Створити нову властивість", "CreateProperty",new { linkName = ViewBag.LinkName })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Видалити", "DeleteProperty", new { prop_id = item.Id }) 
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Назад до списку", "Index")
</div>