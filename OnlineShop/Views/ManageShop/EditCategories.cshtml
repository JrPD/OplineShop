                @*//todo тут повинен бути потім норм зображння*@ 
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Level</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> 
                    @Html.ActionLink("Edit", "EditSomeCategory", item.Name);
                </div>
            </div>
        </div>
    }
