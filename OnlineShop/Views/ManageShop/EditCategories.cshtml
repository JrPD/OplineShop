@model IEnumerable<OnlineShop.Models.ManageShopModels.Views.CategoryViewSmpl>

@{
    ViewBag.Title = "EditCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditCategories</h2>

