@model OnlineShop.Models.ApplicationUser

@{
    ViewBag.Title = "Деталі";
}

<h2>Деталі.</h2>

<div>
    <h4>Користувач</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>Список ролей цього користувача</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>Ролей не знайдено для цього користувача</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Редагувати", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад до списку", "Index")
</p>



