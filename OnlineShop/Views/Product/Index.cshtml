@model IEnumerable<OnlineShop.Models.ManageShopModels.Views.ProductView>

@{
	ViewBag.Title = "Список продуктів";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
	@Html.ActionLink("Створити новий", "Create")
</p>
<table class="table">
	<tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Count)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Price)
		</th>
		
		<th>
			@Html.DisplayNameFor(model => model.IsAvailable)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model)
{
	<tr>
        <td>
            @Html.EditorFor(modelItem => item.Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style="width: 100px" } })  
        </td>
        <td>
            @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width: 100px" } })
        </td>
		<td>
			@Html.EditorFor(modelItem => item.Count, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width: 100px" } })
		</td>
		<td>
			@Html.EditorFor(modelItem => item.Price, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width: 100px" } })
		</td>
		
		<td>
			@Html.EditorFor(modelItem => item.IsAvailable, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width: 100px" } })
		</td>
		<td>
            <ul class="nav navbar-nav">
                <li>
                    @Html.ActionLink("Редагувати", "Edit", new { id = item.Id })
                </li>
                <li>
                    @Html.ActionLink("Деталі", "Details", new { id = item.Id })
                </li>
                <li>
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                </li>
            </ul>
            </td>
	</tr>
}
</table>