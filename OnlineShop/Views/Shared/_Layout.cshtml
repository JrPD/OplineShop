@using System.Resources
@using OnlineShop
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			@Html.ActionLink("Online Shop", "Index", "Home", null, new {@class = "navbar-brand"})
		</div>
		<div class="navbar-collapse collapse nav-menu">
			<ul class="nav navbar-nav">
				<li>@Html.ActionLink("Головна", "Index", "Home")</li>
				@if (Request.IsAuthenticated && User.IsInRole("Admin"))
				{
					<li>@Html.ActionLink("Редактор ролей", "Index", "RolesAdmin")</li>
					<li>@Html.ActionLink("Назначення ролей", "Index", "UsersAdmin")</li>
					//todo Змінити на роль суб адміна або як її там ну кароч з 4 ролей до неї має мати доступ адмін і суб адмін і все
					<li>@Html.ActionLink("Менеджмент", "Index", "ManageShop")</li>
				}
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>
	
	<div>
		<div class="col-md-2 " style="height: 100%">

			@{Html.RenderAction("TestMenu", "Home");}
		</div>
		<div class="col-md-10">


			<div class=" container body-content">

				@RenderBody()
				<p style="text-align: center">
					@{ Html.RenderAction("GetPath", "ManageShop"); }
				</p>
			</div>
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - @Res.ApplicationName</p>
			</footer>
		</div>       
		
	</div></body>
</html>
